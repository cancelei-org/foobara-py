[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "{{ package_name }}"
version = "0.1.0"
description = "{{ description }}"
readme = "README.md"
requires-python = ">={{ python_version }}"
{% if author %}
authors = [
    { name = "{{ author }}" },
]
{% endif %}
dependencies = [
    "foobara-py>=0.1.0",
    "pydantic>=2.0.0",
{% if is_api %}
    "uvicorn>=0.20.0",
    "starlette>=0.27.0",
{% endif %}
{% if is_web %}
    "jinja2>=3.0.0",
{% endif %}
]

[project.optional-dependencies]
dev = [
    "pytest>=7.0.0",
    "pytest-cov>=4.0.0",
    "pytest-asyncio>=0.21.0",
    "black>=23.0.0",
    "ruff>=0.0.260",
    "mypy>=1.0.0",
]

[project.scripts]
{{ package_name }} = "{{ package_name }}:main"
{% if is_api %}
{{ package_name }}-server = "{{ package_name }}.server:main"
{% endif %}

[tool.pytest.ini_options]
asyncio_mode = "auto"
testpaths = ["tests"]

[tool.black]
line-length = 100
target-version = ["py{{ python_version | replace('.', '') }}"]

[tool.ruff]
line-length = 100
target-version = "py{{ python_version | replace('.', '') }}"

[tool.mypy]
python_version = "{{ python_version }}"
strict = true
