.PHONY: install dev test lint format typecheck clean run

# Install production dependencies
install:
	pip install -e .

# Install development dependencies
dev:
	pip install -e ".[dev]"

# Run tests
test:
	pytest

# Run tests with coverage
test-cov:
	pytest --cov={{ package_name }} --cov-report=html --cov-report=term

# Lint code
lint:
	ruff check {{ package_name }} tests

# Format code
format:
	black {{ package_name }} tests
	ruff check --fix {{ package_name }} tests

# Type check
typecheck:
	mypy {{ package_name }}

# Run all checks
check: lint typecheck test

# Clean build artifacts
clean:
	rm -rf build/
	rm -rf dist/
	rm -rf *.egg-info/
	rm -rf .pytest_cache/
	rm -rf .mypy_cache/
	rm -rf .ruff_cache/
	rm -rf htmlcov/
	rm -rf .coverage
	find . -type d -name __pycache__ -exec rm -rf {} +
	find . -type f -name "*.pyc" -delete

{% if is_api %}
# Run the API server
run:
	python -m {{ package_name }}.server

# Run with auto-reload
run-dev:
	uvicorn {{ package_name }}.server:app --reload --host 0.0.0.0 --port 8000
{% else %}
# Run the application
run:
	python -m {{ package_name }}
{% endif %}

{% if include_docker %}
# Build Docker image
docker-build:
	docker build -t {{ package_name }}:latest .

# Run Docker container
docker-run:
	docker run -p 8000:8000 {{ package_name }}:latest
{% endif %}
